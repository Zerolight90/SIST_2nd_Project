<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nmem">
    <select id="getNmem" resultType="mybatis.vo.NmemVO">
        select * from nmember
    </select>

    <select id="getNmemSearch" resultType="mybatis.vo.NmemVO" parameterType="Map">
        SELECT * from nmember
        <where>
            <if test="datepicker != null and datepicker != ''">
                AND regDate = #{datepicker}
            </if>

            <if test="search_keyword != null and search_keyword != ''">
                <choose>
                    <when test="search_field == name">
                        AND name LIKE CONCAT('%', #{search_keyword}, '%')
                    </when>
                    <when test="search_field == email">
                        AND email LIKE CONCAT('%', #{search_keyword}, '%')
                    </when>
                    <otherwise>
                        AND (name LIKE CONCAT('%', #{search_keyword}, '%') OR email LIKE CONCAT('%', #{search_keyword}, '%'))
                    </otherwise>
                </choose>
            </if>
        </where>
    </select>
</mapper>