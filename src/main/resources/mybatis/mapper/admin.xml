<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">
    <!--모든 관리자를 구하는 쿼리 (종민)-->
    <select id="getAllAdmin" resultType="mybatis.vo.AdminVO">
        select * from admin
    </select>

    <select id="adminCheck" resultType="mybatis.vo.AdminVO" parameterType="Map">
        select * from admin
        where adminId = #{id} and adminPassword = #{pw}
    </select>

    <select id="salesByTheater" resultType="mybatis.vo.RevenueVO">
        SELECT
        t.tName AS theaterName,
        SUM(p.paymentFinal) AS totalSales
        FROM
        payment p
        JOIN
        reservation r ON p.reservIdx = r.reservIdx
        JOIN
        theater t ON r.tIdx = t.tIdx
        WHERE
        p.paymentStatus = 0 -- 0:결제완료, 1:취소
        GROUP BY
        t.tName
        ORDER BY
        totalSales DESC
    </select>

    <resultMap id="revenueResultMap" type="mybatis.vo.RevenueVO">
        <result property="theaterName" column="tName"/>
        <result property="totalSales" column="totalSales"/>
    </resultMap>

    <select id="getSalesBySearch" parameterType="map" resultMap="revenueResultMap">
        SELECT
        T.tName,
        SUM(P.paymentFinal) as totalSales
        FROM payment P
        JOIN reservation R ON P.reservIdx = R.reservIdx
        JOIN time_table TT ON R.timeTableIdx = TT.timeTableIdx
        JOIN theater T ON TT.tIdx = T.tIdx
        JOIN movie M ON TT.mIdx = M.mIdx
        WHERE 1=1
        <if test="startDate != null and startDate != ''">
            AND DATE(P.paymentDate) <![CDATA[ >= ]]> #{startDate}
        </if>
        <if test="endDate != null and endDate != ''">
            AND DATE(P.paymentDate) <![CDATA[ <= ]]> #{endDate}
        </if>
        <if test="theaterNames != null and theaterNames.size > 0">
            AND T.tName IN
            <foreach collection="theaterNames" item="name" open="(" separator="," close=")">
                #{name}
            </foreach>
        </if>
        <if test="movieGenre != null and movieGenre != ''">
            AND M.gen LIKE CONCAT('%', #{movieGenre}, '%')
        </if>
        <if test="paymentType != null and paymentType != ''">
            AND P.paymentType = #{paymentType}
        </if>
        <if test="timeOfDay != null and timeOfDay != ''">
            <choose>
                <when test="timeOfDay == '06-11'">
                    AND HOUR(TT.startTime) BETWEEN 6 AND 11
                </when>
                <when test="timeOfDay == '12-17'">
                    AND HOUR(TT.startTime) BETWEEN 12 AND 17
                </when>
                <when test="timeOfDay == '18-24'">
                    AND HOUR(TT.startTime) BETWEEN 18 AND 24
                </when>
            </choose>
        </if>
        <if test="memberType != null and memberType != ''">
            <choose>
                <when test="memberType == 'member'">
                    AND R.userIdx IS NOT NULL
                </when>
                <when test="memberType == 'nmember'">
                    AND R.nIdx2 IS NOT NULL
                </when>
            </choose>
        </if>
        GROUP BY T.tName
    </select>

    <select id="getAllTheaters" resultType="String">
        SELECT tName
        FROM theater
        ORDER BY tName
    </select>

</mapper>